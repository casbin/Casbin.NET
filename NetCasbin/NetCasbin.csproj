<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net45</TargetFrameworks>
    <NoWarn>$(NoWarn);CS1591;CS0618</NoWarn>
    <Description>Casbin ported to dotnet core</Description>
    <Authors>Casbin, Zhikui H</Authors>
    <RepositoryUrl>https://github.com/casbin-net/Casbin.NET</RepositoryUrl>
    <RepositoryType>GIT</RepositoryType>
    <Company>Zhikui H</Company>
    <Copyright>Apache License 2.0</Copyright>
    <Version>1.3.0</Version>
    <Product>Casbin.NET</Product>
    <AssemblyVersion>1.3.0.0</AssemblyVersion>
    <SignAssembly>false</SignAssembly>
    <DelaySign>false</DelaySign>
    <AssemblyOriginatorKeyFile>casbin.snk</AssemblyOriginatorKeyFile>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <FileVersion>1.3.0.0</FileVersion>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Casbin.NET</PackageId>
    <PackageIcon>casbin.png</PackageIcon>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <PackageReleaseNotes>1. Merge the manage policy steps to one
2. Add useAsync option parameter when setting watcher
3. Implemente async api at enforcer
4. Improve performance when using large amount policy</PackageReleaseNotes>
    <PackageProjectUrl>https://github.com/casbin-net/Casbin.NET</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="casbin.snk" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="DynamicExpresso.Core" Version="2.3.1" />
  </ItemGroup>

  <ItemGroup>
    <None Include="casbin.png" Pack="true" Visible="false" PackagePath="" />
  </ItemGroup>

</Project>
